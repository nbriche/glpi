{% extends "glpi_page.twig" %}
{% set item = false %}

{% block header %}
   {{ parent() }}
{% endblock %}

{% block content %}
<div class="container content">
   <div style="background-color:white;">
      {% include "elements/form.twig" with {'glpi_form': glpi_form} %}

   {% block dd_content %}
      <div class="container row">
      {% for label, dp in glpi_form.elements.dropdowns.values %}
         <div class="col-xs-12  col-sm-6 col-md-3">
            <div class="card">
               <div class="card-header with-border">
                  <h3>{{ label }}</h3>
                  <div class="btn-grouppull-right">
                     <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                     </button>
                  </div>
               </div>
               <div class="card-body">
                  <dl>
         {% for key, value in dp %}
            {% set dd_item = getitem(key) %}
                     <dd>
                        <a href="{{ path_for('list', {'itemtype': key})}}">
                           <i class="fa fa-star{% if not dd_item.isEntityAssign() %} woentity{% endif %}"
                              title="{% if dd_item.isEntityAssign() %}{{ __s('Assigned to entity') }}{% else %}{{ __s('Not assigned to entity') }}{% endif %}"></i>
                           {{ value }}
                        </a>
                     </dd>
         {% endfor %}
                  </dl>
               </div>
            </div>
         </div>
      {% endfor %}
      </div>
   {% endblock %}

   </div>
</div>
{% endblock %}

{% block javascripts %}
   {{ parent() }}
   <script type="text/javascript">
      var onDdListChange = function (elt, event) {
         var _value = elt.val();
         if (_value != 0) {
            window.location.href = '{{ path_for('dropdowns', {'dropdown': 'PLACEBO'}) }}'.replace(/PLACEBO/, _value);
         } else {
            window.location.href = '{{ path_for('dropdowns') }}';
         }
      };
   </script>
{% endblock %}
