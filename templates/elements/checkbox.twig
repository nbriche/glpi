{% extends "elements/input.twig" %}

{% block component %}
   {% set element = element|merge({
      'type':  'checkbox',
      'class': 'checkbox',
      'columns': element.columns|default(4)
   }) %}

   {% if element.label is defined %}
      {% set label = element.label %}
      {% if label is not iterable %}
         {% set label = {'label': label} %}
      {% endif %}
      {% set element = element|merge({
         'label': label|merge({'columns': 8})
      }) %}

   {% endif %}
   {{ parent() }}
{% endblock %}

{% block element_attributes %}
    {{ parent() }}
    {%if element.checked is defined and element.checked == true %} checked="checked"{% endif %}
{% endblock %}
