{% extends "elements/input.twig" %}

{% block component %}
   {% set element = element|merge({
      'type':           'password',
      'autocomplete':   'off',
      'value':          null,
      'posticons':      true,
      'clear':          element.clear|default(false)
   }) %}
   {{ parent() }}
{% endblock %}

{% block post_element %}
    {% if element.clear %}
    <div class="input-group-append">
        <div class="input-group-text">
            <input name="_blank_passwd" value="1" type="checkbox" title="{{ __('Clear password') }}" data-toggle="tooltip"/>
        </div>
    </div>
    {% endif %}
{% endblock %}
