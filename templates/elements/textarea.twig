{% extends "elements/input.twig" %}

{% block label %}
   {% set label = element.label %}
   {% if label is not iterable %}
      {% set label = {'label': label, 'class': 'vtop'} %}
   {% endif %}
   {% set element = element|merge({
      'type':     'hidden',
      'title':    '',
      'label':    label
   }) %}
   {{ parent() }}
{% endblock %}

{% block element %}
    <textarea
        {% set default_input_class = 'autogrow' %}
        {% block element_attributes %}{{ parent() }}{% endblock %}

        rows="{{ element.rows|default(3) }}"
    >
        {% if element.value is defined %}{{ element.value|raw }}{% endif %}
    </textarea>
{% endblock %}
