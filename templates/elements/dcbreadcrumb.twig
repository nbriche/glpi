{% extends "elements/input.twig" %}

{% set element = element|merge({name: false}) %}
{% block element %}
    {% set fallback_input_class = fallback_input_class|default('col-form-label') %}
    <div class="controls">
        <div class="input-group">
            <div class="{% if default_input_class is defined %}{{ default_input_class }} {% endif %}{%if element.class is defined %}{{ element.class }}{% else %}{{ fallback_input_class }}{% endif %}">
    {% if element.value is defined and element.value is iterable %}
       {% for value in element.value %}
                {{ value|raw }}{% if not loop.last %} > {% endif %}
       {% endfor %}
    {% else %}
                {{ __('Missing data to build breadcrumb') }}
    {% endif %}
      </div>
   </div>
   </div>
{% endblock %}
